<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/attendance_settings_header">

        <EditTextPreference
            app:key="desired_attendance"
            app:title="@string/set_desired_attendance"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="75" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other_settings_header">

        <Preference
            app:key="version_info"
            app:title="@string/version_header"
            app:summary="@string/app_version" />

        <Preference
            app:key="logout"
            app:title="@string/logout_header" />

    </PreferenceCategory>

</PreferenceScreen>